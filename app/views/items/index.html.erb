<h1>Товары</h1>


<% @items.each do |item| %>
    <div class="item-element">
    <div class="avatar"><%= link_to image_tag(item.avatar.url(:thumb)), item %></div>
    <div class="name"><%= link_to item.name, item %></div>
    <div class="price"><%= item.price %> руб. </div>
        <% if signed_in? %>
            <div class = "buy">
            <%= link_to 'В корзину', item_users_path(item_id: item.id), method: :post  %>
            </div>
        <% end %>
    </div>
<% end %>

    <% if signed_in? %>
        <div class="add-item-control">
            <%= link_to "Создать новый товар", new_item_path, class: 'btn' %>
        </div>
<% end %>