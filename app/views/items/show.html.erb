<h1><%= @item.name %></h1>
<div>
  <%= @item.description %>
</div>
<div>
  Цена: <%= @item.price %> руб.
</div>

<div>
  Категория:
  <% if @item.category %>
      <%= @item.category.name %>

  <% end %>
  </div>
<h2>Обсуждение</h2>
<%= render 'comments/form' %>
<% @item.comments.each do |c| %>
<div>
  <%= c.created_at%>
</div>
<div>
<%= c.message %>
</div>
<div><%= link_to 'Удалить', c, method: :delete, confirm: 'Точно удалить, чувак?' %>

</div>
<% end %>